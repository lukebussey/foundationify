<div class="row">
    <div class="small-12 columns">

        <h3>Collections</h3>
        <hr>

        <ul class="small-block-grid-2 large-block-grid-3">
            {% for collection in collections %}
                {% unless collection.handle == 'frontpage' %}
                    <li>
                        <a href="{{ collection.url }}">
                            {% if collection.image %}
                                <img class="th" src="{{ collection.image.src | collection_img_url: 'large' }}" alt="{{ collection.title | escape }}">
                            {% else %}
                                <img class="th" src="{{ collection.products.first.featured_image | product_img_url: 'large' }}" alt="{{ collection.title | escape }}">
                            {% endif %}
                        </a>
                        <h5 class="subheader"><a href="{{ collection.url }}">{{ collection.title }}</a></h5>
                        <p>{{ collection.all_products_count }} {{ collection.all_products_count | pluralize: 'item', 'items' }}</p>
                        <hr>
                    </li>
                {% endunless %}
            {% endfor %}
        </ul>

    </div>
</div>